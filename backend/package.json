{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "repository": {},
  "license": "",
  "scripts": {
    "start": "better-npm-run build:debug",
    "debug": "better-npm-run build:debug",
    "build:stage": "better-npm-run build:stage",
    "build:prod": "better-npm-run build:prod",
    "build": "better-npm-run build:prod",
    "build:server": "better-npm-run build:server"
  },
  "betterScripts": {
    "build:dev": {
      "command": "node server.js",
      "env": {
        "mode": "dev",
        "port": 3000
      }
    },
    "build:debug": {
      "command": "nodemon server.js",
      "env": {
        "mode": "dev",
        "port": 3000
      }
    },
    "build:stage": {
      "command": "./start-server.sh",
      "env": {
        "mode": "stage",
        "port": 4001
      }
    },
    "build:prod": {
      "command": "node server.js",
      "env": {
        "mode": "prod",
        "port": 80
      }
    },
    "build:server": {
      "command": "node server-with-dist.js",
      "env": {
        "mode": "server",
        "port": 80
      }
    }
  },
  "dependencies": {
    "@upstash/redis": "^1.34.0",
    "@vercel/kv": "^2.0.0",
    "apidoc": "^0.17.5",
    "axios": "^1.7.2",
    "better-npm-run": "^0.0.15",
    "body-parser": "^1.17.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.3",
    "dotenv": "^16.4.5",
    "express": "^4.15.2",
    "express-validator": "^3.2.0",
    "jsonpath": "^1.1.1",
    "jsonwebtoken": "9.0.0",
    "lodash": "^4.17.21",
    "md5": "^2.2.1",
    "node-forge": "^1.3.1",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.14",
    "pg": "^6.1.5",
    "sequelize": "6.29.0",
    "toml": "^3.0.0",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "mocha": "^10.6.0"
  }
}
